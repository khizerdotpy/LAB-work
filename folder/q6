#include <stdio.h>

int main()
{
    float x1,x2,y1,y2,slope;
    printf("Enter x1: ");
	scanf("%f",&x1);
	printf("Enter y1: ");
	scanf("%f",&y1);
	printf("Enter x2: ");
	scanf("%f",&x2);
	printf("Enter y2: ");
	scanf("%f",&y2);
	
	slope=(y2-y1)/(x2-x1);
	
	printf("%.3f is the slope",slope);
	return 0;
}
